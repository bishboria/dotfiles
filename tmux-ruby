#!/usr/bin/env bash

tmux -S /var/tmux/pairing new-session -d -s pairing -n vim 'bash -c "mvim -v; bash"'
tmux -S /var/tmux/pairing new-window -t pairing -n rspec 'bash -c "rspec; bash"'
tmux -S /var/tmux/pairing new-window -t pairing -n git  'bash -c "git st; bash"'
tmux -S /var/tmux/pairing new-window -t pairing -n misc  'bash'
tmux -S /var/tmux/pairing select-window -t pairing:0
tmux -S /var/tmux/pairing -2 attach -t pairing

